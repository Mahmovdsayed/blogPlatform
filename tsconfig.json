{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "noEmit": false,
    "isolatedModules": true
  }
}
